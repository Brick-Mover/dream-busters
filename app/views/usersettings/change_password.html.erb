<head>
  <%= include_gon %>
</head>

<%= stylesheet_link_tag 'devise', media: 'all' %>

<div class="row">
  <div class="col-lg-6 col-lg-offset-3">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">Change Username</h3>          
      </div>
      <div class="panel-body">
          <%= form_for @user, url: update_password_path(@user), method: :patch do |f| %>
          <div class="form-group has-error">
            <div class="field">
              <%= f.label "Password", class: "control-label" %><br />
              <%= f.password_field :password, :autocomplete => "off", class: "form-control" %>
            </div>
          </div>
          <div class="form-group has-error">
            <div class="field">
              <%= f.label "Password Confirmation", class: "control-label" %><br />
              <%= f.password_field :password_confirmation, class: "form-control" %>
            </div>
          </div>
            <div class="action_container">
              <%= f.submit class: "btn btn-primary" %>
            </div>
        <% end %>
      </div>

      <div class="panel-footer">
        <%= link_to "Back", welcomes_path, class: "btn btn-primary" %>
      </div>

    </div>

  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->